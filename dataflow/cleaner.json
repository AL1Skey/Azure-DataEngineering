{
	"name": "cleaner",
	"properties": {
		"description": "remove unnecessary columns, modified the data type and add columns",
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "AzureSqlTable2",
						"type": "DatasetReference"
					},
					"name": "datatypemod",
					"description": "Modifies Data Type to expected data type"
				}
			],
			"sinks": [
				{
					"dataset": {
						"referenceName": "AzureSqlTable2",
						"type": "DatasetReference"
					},
					"name": "Save"
				}
			],
			"transformations": [
				{
					"name": "derivedColumn1"
				},
				{
					"name": "select1"
				},
				{
					"name": "AlterRow1"
				}
			],
			"scriptLines": [
				"source(output(",
				"          segid as string,",
				"          natid as string,",
				"          product as string,",
				"          priceid as string,",
				"          discount_band as string,",
				"          units_sold as integer,",
				"          manufacturing_price as float,",
				"          sale_price as float,",
				"          gross_sales as float,",
				"          discounts as float,",
				"          sales as float,",
				"          cogs as float,",
				"          profit as float,",
				"          date as date,",
				"          segment as string,",
				"          nationality as string,",
				"          month_number as integer,",
				"          year as integer,",
				"          month_name as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     isolationLevel: 'READ_UNCOMMITTED',",
				"     format: 'table') ~> datatypemod",
				"datatypemod derive(total_price = manufacturing_price + sale_price) ~> derivedColumn1",
				"derivedColumn1 select(mapColumn(",
				"          segid,",
				"          natid,",
				"          product,",
				"          priceid,",
				"          discount_band,",
				"          units_sold,",
				"          manufacturing_price,",
				"          sale_price,",
				"          gross_sales,",
				"          discounts,",
				"          sales,",
				"          cogs,",
				"          profit,",
				"          date,",
				"          segment,",
				"          nationality,",
				"          month_number,",
				"          year,",
				"          month_name,",
				"          total_price",
				"     ),",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true) ~> select1",
				"select1 alterRow(upsertIf(true()),",
				"     insertIf(true())) ~> AlterRow1",
				"AlterRow1 sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     deletable:false,",
				"     insertable:true,",
				"     updateable:false,",
				"     upsertable:false,",
				"     recreate:true,",
				"     format: 'table',",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true,",
				"     errorHandlingOption: 'stopOnFirstError') ~> Save"
			]
		}
	}
}